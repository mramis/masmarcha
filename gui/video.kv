#:include gui/frame.kv

#:set row_height 50


<VideoUtil>:  # video-image widget
    rows: 4
    cols: 1
    config: app.usrconfig
    # mensaje de display
    Label:
        size_hint_y: 0.1
        text: "acá va un texto que muestra la ruta del archivo"
    # display image widget
    Frame:
        id: frame
    # status progress bar
    ProgressBar:
        size_hint_y: 0.05
    # video - image command buttons
    GridLayout:
        rows: 1
        cols: 5
        spacing: 5
        size_hint_y: 0.05
        row_force_default: True
        row_default_height: row_height
        # boton de grabar video
        Button:
            text: "record"
            on_release: root.record()
        # boton de reproducir video
        Button:
            text: "play"
            on_release: root.play()
        # boton de detener reproducción y grabación.
        Button:
            text: "stop"
            on_release: root.stop()
        Button:
            text: "next"
        Button:
            text: "back"


<VideoConsole@GridLayout>:
    # Necesita una función que abra un popup para buscar los archivos de video.

    # Necesita una función que ligue el nombre del archivo a la etiqueta del
    # visualizador de videos e imágenes.

    # Necesita una función que genere nuevos nombres aleatorios para
    # los videos: "".join([str(random.randint(0, 9)) for i in range(25)])

    rows: 2
    cols: 1
    spacing: 5

    GridLayout: # Layout de bottones de comando
        rows: 3
        cols: 1
        spacing: 5
        size_hint_y: 0.3
        row_force_default: True
        row_default_height: row_height
        # La etiqueta que nombra la sección.
        Label:
            text: "Video Commands"
        # El campo para ingresar el nombre del archivo de video.
        TextInput:
            # Necesita una función que genere nuevos nombres aleatorios para
            # los videos: "".join([str(random.randint(0, 9)) for i in range(25)])
            text: "*nombre del video a grabar"
        # El botón que abre el archivo.
        Button:
            text: "Open filepath"

    GridLayout: # Layout de configuración de video
        rows: 9
        cols: 1
        # size_hint_y: 0.7
        spacing: 5
        row_force_default: True
        row_default_height: row_height

        Label:
            text: "Video Configuration"
        Button: # tal config widget
        Button: # tal config widget
        Button: # tal config widget
        Button: # tal config widget
