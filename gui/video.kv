<VideoImageMaster@GridLayout>:  # video-image widget
    rows: 3
    cols: 1

    GridLayout:  # video-image filepath (to read or to write)
        rows: 2
        cols: 1
        GridLayout:  # buttons to read or to write filepath
            rows: 1
            cols: 2
            Button:
                text: "entry"
            Button:
                text: "load file"
        GridLayout:  # entry or show-load field filepath
            id: entryshowload
            rows: 1
            cols: 1
            # solo por ahora voy a poner una celda de texto.
            Label:
                text: "ac√° va un texto que muestra la ruta del archivo"

    GridLayout:  # display-status image widget
        rows: 2
        cols: 1
        GridLayout:  # display widget
            rows: 1
            cols: 1
        GridLayout:  # status progress bar
            rows: 1
            cols: 1

    GridLayout:  # video - image command buttons
        rows: 1
        cols: 5
        Button:
            text: "play"
        Button:
            text: "record"
        Button:
            text: "stop"
        Button:
            text: "next"
        Button:
            text: "back"
