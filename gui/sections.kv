#:import BoolOption gui.configw.BoolOption
#:import FloatOption gui.configw.FloatOption
#:import IntegerOption gui.configw.IntegerOption
#:include gui/configw.kv

#:set pannel_text_height 30
#:set pannel_spacing 25
#:set pannel_padding 5


<Sections>:
  vu_buttons: {}
  do_default_tab: False
  TabbedPanelItem:
    text: "Video"
    VideoSubSection
      vu_buttons: root.vu_buttons

  TabbedPanelItem:
    text: "Explorer"
    ExplorerSubSection:
      vu_buttons: root.vu_buttons

  TabbedPanelItem:
    text: "Kinematics"
    KinematicsSubSection:
      vu_buttons: root.vu_buttons

<VideoSubSection>:
  rows: 3
  cols: 1
  config: app.usrconfig

  spacing: pannel_spacing
  padding: pannel_padding
  row_force_default: True
  row_default_height: pannel_text_height

  GridLayout:  # Seleccionar dispositivo.
    rows: 1
    cols: 2
    spacing: 5
    row_force_default: True
    row_default_height: pannel_text_height
    Label:
      text: "seleccionar dispositivo:"
      halign: "left"
      valign: "center"
      text_size: self.size
      size_hint_x: 0.6
    Spinner:
      id: device
      text: root.config.get("video", "device")
      values: ["webcam", "usb_camera"]
      on_text: root.setDevice(self.text)

  GridLayout:  # Nombre del archivo de video a capturar.
    rows: 2
    cols: 1
    spacing: 5
    row_force_default: True
    row_default_height: pannel_text_height
    Label:
      text: "ingresar nombre del archivo de video:"
      halign: "left"
      text_size: self.size
    TextInput:
      id: videoname
      multiline: False
      on_text_validate: root.setVideoName(self.text)

  GridLayout:  # Configuraci贸n de captura.
    rows:
    cols: 2
    spacing: pannel_spacing + 30
    padding: [0, pannel_padding + 30, 0, 0]
    row_force_default: True
    row_default_height: pannel_text_height
    IntegerOption:
      label: u"Umbral de blanco"
      section_variable: "image:threshold"
      option_values: [200, 255, 1]
    BoolOption:
      label: u"Expandir detecci贸n"
      section_variable: "image:dilate"
    IntegerOption:
      label: u"Iteraciones de dilataci贸n"
      section_variable: "image:dilate_iterations"
      option_values: [3, 10, 1]
    IntegerOption:
      label: u"Escala de dilataci贸n"
      section_variable: "image:dilate_kernel_size"
      option_values: [3, 11, 2]



<ExplorerSubSection>:
  config: app.usrconfig


<KinematicsSubSection>:
  config: app.usrconfig
