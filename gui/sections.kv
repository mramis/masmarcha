#:import BoolOption gui.configw.BoolOption
#:import FloatOption gui.configw.FloatOption
#:import IntegerOption gui.configw.IntegerOption
#:include gui/configw.kv

#:set pannel_text_height 30
#:set pannel_spacing 25
#:set pannel_padding 5


<Sections>:
  vu_buttons: {}
  do_default_tab: False
  TabbedPanelItem:
    text: "Video"
    VideoSubSection
      vu_buttons: root.vu_buttons

  TabbedPanelItem:
    text: "Explorer"
    ExplorerSubSection:
      vu_buttons: root.vu_buttons

  TabbedPanelItem:
    text: "Kinematics"
    KinematicsSubSection:
      vu_buttons: root.vu_buttons

<VideoSubSection>:
  rows: 3
  cols: 1
  config: app.usrconfig
  spacing: 50

  row_force_default: True
  row_default_height: pannel_text_height

  GridLayout:  # Seleccionar dispositivo.
    rows: 1
    cols: 2
    Label:
      text: "seleccionar dispositivo:"
      halign: "left"
      valign: "center"
      text_size: self.size
      size_hint_x: 0.6
    Spinner:
      id: device
      text: root.config.get("video", "device")
      values: ["webcam", "usb_camera"]
      on_text: root.setDevice(self.text)

  GridLayout:  # Nombre del archivo de video a capturar.
    rows: 2
    cols: 1
    row_force_default: True
    row_default_height: pannel_text_height
    Label:
      text: "ingresar nombre del archivo de video:"
      halign: "left"
      text_size: self.size
    TextInput:
      id: videoname
      multiline: False
      on_text_validate: root.setVideoName(self.text)

  GridLayout:  # Configuración de captura.
    rows:
    cols: 2
    spacing: 35
    row_force_default: True
    row_default_height: pannel_text_height
    IntegerOption:
      label: u"Umbral de blanco"
      section_variable: "image:threshold"
      option_values: [150, 255, 1]
    BoolOption:
      label: u"Expandir detección"
      section_variable: "image:dilate"
    IntegerOption:
      label: u"Iteraciones de dilatación"
      section_variable: "image:dilate_iterations"
      option_values: [3, 10, 1]
    IntegerOption:
      label: u"Escala de dilatación"
      section_variable: "image:dilate_kernel_size"
      option_values: [3, 11, 2]


<ExplorerSubSection>:
  rows: 8
  cols: 1
  config: app.usrconfig
  spacing: 50
  row_force_default: True
  row_default_height: pannel_text_height

  GridLayout:  # Selección de archivos de video.
    rows: 2
    cols: 1
    row_force_default: True
    row_default_height: pannel_text_height
    GridLayout:
      rows: 1
      cols: 2
      Label:
        text: "seleccionar archivo:"
        halign: "left"
        valign: "center"
        text_size: self.size
        size_hint_x: 0.6
      Button:
        text: "abrir"
        on_release: root.showLoad()
    Label:
      id: filepath_label
      halign: "left"
      valign: "center"
      text_size: self.size

  GridLayout:  # Configuración de captura.
    rows: 3
    cols: 2
    spacing: 35
    row_force_default: True
    row_default_height: pannel_text_height
    IntegerOption:
      label: u"Umbral de blanco"
      section_variable: "image:threshold"
      option_values: [150, 255, 1]
    BoolOption:
      label: u"Expandir detección"
      section_variable: "image:dilate"
    IntegerOption:
      label: u"Iteraciones de dilatación"
      section_variable: "image:dilate_iterations"
      option_values: [3, 10, 1]
    IntegerOption:
      label: u"Escala de dilatación"
      section_variable: "image:dilate_kernel_size"
      option_values: [3, 11, 2]
    FloatOption:
      label: u"Retardo en reproducción"
      section_variable: "video:delay"
      option_values: [0., 1., 0.05]
  # Se agregan como espaciadores
  GridLayout
  GridLayout

  Button:  # Botón de exploración
    text: "Explorar"
    on_release: print(f"EXPLORANDOOOO")


<LoadDialog>:
  BoxLayout:
    size: root.size
    pos: root.pos
    orientation: "vertical"
    FileChooserListView:
      id: filechooser
      rootpath: root.source
    BoxLayout:
      size_hint_y: None
      height: pannel_text_height
      Button:
        text: "Seleccionar"
        on_release: root.load(filechooser.selection)


<KinematicsSubSection>:
  config: app.usrconfig
