<VideoFrame>:
  rows: 3
  cols: 1
  spacing: 0, 2
  row_force_default: True
  row_default_height: 35
  GridLayout:  # Apertura
    rows: 1
    cols: 3
    Button:
      text: "Abrir"
      size_hint_x: 0.40
      on_release: root.show_load()
    Label:
      text: "Archivo:"
      size_hint_x: 0.20
    Label:
      id: show_file
      valign: 'middle'
      halign: 'left'
      text_size: self.size
  Button:
    text: "Reproducir"
    on_release: root.show_video()


<LoadDialog>:
  BoxLayout:
    size: root.size
    pos: root.pos
    orientation: "vertical"
    FileChooserListView:
      id: filechooser
      rootpath: root.source
    BoxLayout:
      size_hint_y: None
      height: 35
      Button:
        text: "Seleccionar"
        on_release: root.load(filechooser.selection)
