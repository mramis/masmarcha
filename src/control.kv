<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            rootpath: root.source
        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Seleccionar"
                on_release: root.load(filechooser.path, filechooser.selection)


<Control>:
    rows: 2
    Label:
        text: "CONTROL"
        size_hint: 1, 0.2
    GridLayout:
        rows: 8
        size_hint: 1, 0.8
        row_force_default: True
        row_default_height: 35
        Label:
            text: "Video"
            text_size: self.size
        VidControl:
            progressbar: root.ids.progress
            walks: root.ids.walks
        Label:
            text: "Caminatas"
            text_size: self.size
        WalksControl:
            id: walks
        Label:
            text: "Gr√°ficas"
            text_size: self.size
        PlotsControl:
            config: app.config
            explorer: app.explorer
            progressbar: root.ids.progress
        Label:
            text: "Progreso"
            text_size: self.size
        ProgressBar:
            id: progress
            row_force_default: True
            row_default_height: 35


<VidControl>:
    cols: 4
    spacing: 3
    config: app.config
    explorer: app.explorer
    Button:
        text: "Abrir"
        on_press: root.show_load()
        size_hint_x: 0.15
    TextInput:
        id: sourcefile
        multiline: False
        size_hint_x: 0.45
        write_tab: False
        on_text: root.load_video()
    Button:
        text: 'Visualizar'
        on_release: root.preview()
        size_hint_x: 0.15
    Button:
        text: "Procesar"
        on_press: root.find_walks()
        size_hint_x: 0.15


<WalksControl>:
    cols:3
    spacing: 3
    config: app.config
    explorer: app.explorer
    Spinner:
        id: choice
        default: "Seleccionar"
        text: self.default
        size_hint_x: 0.17
        on_text: root.choice(self.text)
    Button:
        text: "Visualizar"
        size_hint_x: 0.17
        on_release: root.walkview()
    FloatLayout:
        size_hint_x: 0.5


<PlotsControl>:
    cols: 3
    spacing: 3
    explorer: app.explorer
    kinematics: app.kinematics
    Button:
        text: "Graficar"
        size_hint_x: 0.17
        on_release: root.plot(True)
    TextInput:
        id: toremove
        text: "Ejemplo: W0, W2C2, W3, ..."
        multiline: False
        size_hint_x: 0.66
        on_focus: root.select()
        on_text_validate: root.select()
    Button:
        text: "Eliminar"
        on_release: root.remove()
        size_hint_x: 0.17
